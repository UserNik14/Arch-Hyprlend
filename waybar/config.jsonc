{
  "position": "top",
    "margin-top" : 5,
    "margin-left": 10,
    "margin-right": 10,
    "height" : 41,
    "modules-left": [
    "custom/apps",
    "hyprland/workspaces",
    "custom/updates",
    "network",
    ],


    "modules-center": [

      "hyprland/window",
      "custom/cava_mviz",
    ],


    "modules-right": [
    "inhibitor",
    "tray",
    "hyprland/language",
    "pulseaudio",
    "backlight",
    "custom/bluetooth",
    "cpu",
    "battery",
    "memory",
    "disk",
    "temperature",
    "clock",
    "custom/exit",
    ],


    "hyprland/window": {
      "format": "{title}",
      "max-length": 35,
      "icon": true,
      "icon-size": 20,
      "tooltip": false,
      "rewrite": {
        "": "Hyprland"
      },
      "separate-outputs": true,
    },


    "hyprland/workspaces": {
      "format": "{icon}",
      "on-click": "activate",
      "format-icons": {
        "active": "ÔÑë ",
      },
      "sort-by-number": true,
      "persistent-workspaces": {
        "*": 9, // 5 workspaces by default on every monitor
        "HDMI-A-1": 3 // but only three on HDMI-A-1
      },
    },


    "clock": {
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format-alt": "{:%Y-%m-%d}"
    },


    "cpu": {
      "format": "&#128187; {usage}%",
      "tooltip": true,
      "on-click": "kitty htop",
    },


    "memory": {
      "format": "&#128190; {}%"


    },
    "battery": {
      "states": {
        "warning": 30,
        "critical": 15
      },
      "format": "{icon} {capacity}%",
      "format-full": "{icon} {capacity}%",
      "format-charging": "Ôóß {capacity}%",
      "format-plugged": "Ôá¶ {capacity}%",
      "format-alt": "{time} {icon}",
      "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },


    "network": {
      "format-wifi": "Ôá´ {signalStrength}% ‚ñº Down:{bandwidthDownBytes} ‚ñ≤ Up:{bandwidthUpBytes}",
      "format-ethernet": "{cidr} Ôûñ Speed:{bandwidthDownBits} {bandwidthUpBytes}",
      "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
      "format-linked": "{ifname} (No IP) Ôûñ",
      "format-disconnected": " ‚ö† ",
      "format-alt": "{ifname}: {ipaddr}/{cidr}/{essid}",
      "interval": 3,
    },


    "pulseaudio": {
        "scroll-step": 1, // %, can be a float
        "format": " {icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî
        {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"

      },


    "custom/exit": {
        "format": "ÔÄë",
        "on-click": "wlogout",
        "on-click-right": "hyprlock",
        "tooltip-format": "Left: Power menu\nRight: Lock screen"
      },


      "custom/apps": {
        "format":"Apps ",
      "tooltip": false,
      "on-click": "wofi",
      "on-click-right": "killall wofi",
    },


    "disk": {
        "interval": 30,
        "format": "&#128191; {percentage_used}%",
        "path": "/",

    },


    "temperature": {
        "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },


    "backlight": {
	"interval": 2,
	"align": 0,
	"rotate": 0,
	"format": "{icon} {percent}%",
	"format-icons": ["üí°"],
	"tooltip": false,
    },


    "hyprland/language": {
    "format": "{short}",

    },


    "custom/copyq": {
        "format": "ÔÉ™",
        "on-click": "copyq show",
        "tooltip": true,
    },

    "custom/bluetooth": {
        "format" : "Ôäî",
		"tooltip": false,
		"on-click": "blueberry",
    },

     "tray": {
        "icon-size": 21,
        "spacing": 10,
        "tooltip": false,
    },


    "custom/cava_mviz": {
	"exec": "$HOME/.config/waybar/WaybarCava.sh",
	"format": "  {}"
	},


    "inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "custom/updates": {
        "format": "üîÑ {}",
        "exec": "checkupdates | wc -l",
        "interval": 3600,
        "on-click": "kitty -e yay -Syu",
        "signal": 8
    },




}

pacman-contrib (update)
