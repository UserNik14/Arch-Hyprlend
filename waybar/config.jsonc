    "on-click": "kitty cava"
	},


    "inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "custom/updates": {
        "format": "üîÑ {}",
        "exec": "checkupdates | wc -l",
        "interval": 3600,
        "on-click": "kitty -e yay -Syu",
        "signal": 8
    },

    "custom/weather": {
    "format": "{}¬∞C",
    "tooltip": false,
    "interval": 3600,
    "exec": "wttrbar --location 'Rostov-on-Don'",
    "return-type": "json"
